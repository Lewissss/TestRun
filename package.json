{
  "name": "testrun",
  "version": "0.1.0",
  "description": "Local, open-source desktop app for recording and composing Playwright journeys.",
  "license": "MIT",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "clean": "node ./scripts/clean.mjs",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "npm run clean && vue-tsc --noEmit && vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "typecheck": "vue-tsc --noEmit && tsc -p tsconfig.node.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "playwright:test": "playwright test",
    "package": "npm run build && electron-builder -c electron-builder.config.ts",
    "postinstall": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "db:prepare": "node ./scripts/db-prepare.mjs",
    "package:mac": "npm run build && electron-builder -c electron-builder.config.ts --mac dmg",
    "package:win": "npm run build && electron-builder -c electron-builder.config.ts --win nsis",
    "package:linux": "npm run build && electron-builder -c electron-builder.config.ts --linux AppImage",
    "brand:assets": "node ./scripts/generate-brand-assets.mjs",
    "data:export": "node ./scripts/data-export.mjs",
    "data:import": "node ./scripts/data-import.mjs"
  },
  "keywords": [
    "electron",
    "playwright",
    "vue",
    "automation"
  ],
  "author": "",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@types/jszip": "^3.4.0",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/minimap": "^1.5.4",
    "@vue-flow/node-resizer": "^1.5.0",
    "dagre": "^0.8.5",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "jszip": "^3.10.1",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.544.0",
    "naive-ui": "^2.43.1",
    "nanoid": "^5.1.6",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/dagre": "^0.7.53",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^24.6.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "playwright": "^1.55.1",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "prisma": "^6.16.3",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.1.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
